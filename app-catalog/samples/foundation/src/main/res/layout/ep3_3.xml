<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="用户名:"
            android:textSize="50px" />

        <EditText
            android:id="@+id/user"
            android:hint="请输入注册用户名" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="密码:"
            android:textSize="50px" />

        <EditText
            android:id="@+id/pwd"
            android:hint="请输入注册密码"
            android:inputType="textPassword" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="确认密码:"
            android:textSize="50px" />

        <EditText
            android:id="@+id/pwdc"
            android:hint="请再次输入密码"
            android:inputType="textPassword" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="邮箱:"
            android:textSize="50px" />

        <EditText
            android:id="@+id/email"
            android:hint="请输入注册邮箱"
            android:inputType="textEmailAddress" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/reg"
            android:layout_gravity="left"
            android:text="注册"
            android:textSize="50px" />

        <Button
            android:id="@+id/re"
            android:layout_gravity="left"
            android:text="重置"
            android:textSize="50px" />
    </TableRow>

</TableLayout>
